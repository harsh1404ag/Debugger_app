# Server Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_GPT4O_MINI=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT_GPTO3_MINI=gpt-o3-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME="your-embedding-deployment-name" # e.g., text-embedding-3-small

# Azure AI Search Configuration (for RAG)
AZURE_AI_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_AI_SEARCH_KEY=your-search-admin-key
AZURE_AI_SEARCH_INDEX_NAME=code-review-knowledge-base

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PRO_PRICE_ID=price_your-pro-plan-15-monthly
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Database Configuration (Azure SQL Database for production)
DATABASE_URL=sqlite:./database.sqlite  # Local development
AZURE_SQL_CONNECTION_STRING=Server=tcp:your-server.database.windows.net,1433;Initial Catalog=your-database;Persist Security Info=False;User ID=your-username;Password=your-password;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;

# Azure Storage Configuration (for RAG data)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=rag-data

# Session Secret
SESSION_SECRET=your-session-secret-here

# Frontend URL (for Stripe redirects)
FRONTEND_URL="http://localhost:5173" # For local development
# In production, this will be your Azure Static Web App URL (e.g., https://your-app.azurestaticapps.net)